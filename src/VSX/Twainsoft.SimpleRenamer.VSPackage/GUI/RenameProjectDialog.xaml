<Window x:Class="Twainsoft.SimpleRenamer.VSPackage.GUI.RenameProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="70" Width="345" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <StackPanel>
        <Label Content="Type in the New Name for the Project:"/>
        <TextBox Name="ProjectName" x:FieldModifier="private" Margin="2, 0, 2, 0" ToolTip="The New Project Name."/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 2, 0, 2">
            <Button IsDefault="True" Click="Rename_Click" Margin="0, 0, 2, 0">
                <AccessText>_Rename</AccessText>
            </Button>
            <Button IsCancel="True" Margin="0, 0, 2, 0">
                <AccessText>_Cancel</AccessText>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
