<Window x:Class="Twainsoft.SolutionRenamer.VSPackage.GUI.RenameProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="64" Width="345" 
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Label>Bla</Label>
        <TextBox Name="ProjectName" x:FieldModifier="private"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" Name="Rename" x:FieldModifier="private" Click="Rename_Click">Rename</Button>
            <Button  IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
