<Window x:Class="Twainsoft.SolutionRenamer.VSPackage.GUI.RenameProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="70" Width="345" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <StackPanel>
        <Label Content="New Name for the Project:"/>
        <TextBox Name="ProjectName" x:FieldModifier="private"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
            <Button IsDefault="True" Click="Rename_Click" Content="Rename" Margin="0, 0, 2, 0"/>
            <Button IsCancel="True" Content="Cancel"/>
        </StackPanel>
    </StackPanel>
</Window>
